{
    "description": "schema for a Praxis resource definition",
    "type": "object",
    "required": [ "actions" ],
    "properties": {
        "name" :         { "type": ["string"] },
        "display_name" : { "type": ["string","null"] },
        "description" :  { "type": ["string","null"] },
        "parent" : { "type": ["string"] },
        "media_type" : {
          "type" : "object",
          "properties": {
            "name" : { "type": "string" },
            "identifier" : { "type": "string" }
          },
          "required": [ "name" ]
        },
        "actions": {
            "type": "array",
            "items": { "$ref": "action.json#" }
        },
        "metadata": {
          "type": "object"
        },
        "traits": {
          "type": "array"
        }
    },
    "additionalProperties": false
}