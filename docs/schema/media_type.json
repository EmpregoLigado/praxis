{
    "id": "media_type-schema#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema for a Praxis MediaType definition",
    "type": "object",
    "anyOf" : [
      { "$ref" : "attributor-base-type-schema.json#"},
      {
        "type" : "object",
        "properties": {
          "description" : { "type": "string" },
          "views" : {
            "type" : "object",
            "patternProperties" : {
              ".+" : { "$ref": "media_type_view.json#"}
            }
          }
        }
      }
    ],
    "additionalProperties": true
}