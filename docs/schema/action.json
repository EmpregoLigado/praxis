{
      "description": "schema for a Praxis action definition",
      "type": "object",
      "required": [ "name", "urls", "responses" ],
      "properties": {
        "description" : { "type": ["string","null"] },
        "name" : { "type": ["string","null"] },
        "urls": {
            "type": "array",
            "items": { "$ref": "route.json#" }
        },
        "headers": {
          "type": "object",
          "properties" : {
            "options" : { "type" : "object" },
            "type": {"$ref": "attributor-hash.json#"},
            "example" : { "type" : "any" }
          },
          "required" : ["type"]
        },
        "params": {
          "type": "object",
          "properties" : {
            "options" : { "type" : "object" },
            "type": {"$ref": "attributor-hash.json#"},
            "example" : { "type" : "any" }
          },
          "required" : ["type"]
        },
        "payload": { "$ref" : "action_payload.json#" },
        "responses" : {
          "type": "object",
          "patternProperties": {
            ".*": { "$ref": "response.json#"}
          }
        },
        "metadata": {
          "type": "object"
        },
        "traits": {
          "type": "array"
        }
      },
      "additionalProperties": true
}